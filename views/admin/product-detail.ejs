<%- include('../includes/head.ejs') %>
<link href="/css/adminStyle.css" rel="stylesheet" />

</head>

<body>
    <%- include('../includes/search.ejs') %>
    <div class="container-fluid">
        <div class="row">
            <%- include('../includes/siderbar.ejs') %>

            <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">

                <div class="d-flex justify-content-between flex-wrap
                     flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <%- include('../includes/breadcrumb.ejs') %>
                    <h1 class="h2">List Product</h1>
                </div>
                <div class="">
                    <div class="card-body">
                        <form method="POST" action="/admin/product-detail/update">
                            <div class="form-group row">
                                <label for="name" class="col-sm-2 col-form-label font-weight-bold">Product
                                    Name</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control " hidden name="id" value="<%= product._id %>">
                                    <input type="text" class="form-control" name="name" value="<%= product.name %>">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="imgUrl" class="col-sm-2 col-form-label font-weight-bold">Thumbnail
                                    Url</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="imgUrl" name="imgUrl" value="<%= product.imgUrl %>" >
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="price" class="col-sm-2 col-form-label font-weight-bold">Price</label>
                                <div class="col-sm-10">
                                    <input type="number" step="0.0" class="form-control" id="price" name="price" value="<%= product.price %>">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="description"
                                    class="col-sm-2 col-form-label font-weight-bold">Description</label>
                                <div class="col-sm-10">
                                    <textarea type="text" class="form-control" id="description" name="description" 
                                        rows="5"><%= product.description %></textarea>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-danger float-right" style="color:whitesmoke;">

                                <div class="col"><i class="fas fa-save"></i></div>
                                <div class="col">
                                    <p class="font-weight-bold">Save</p>
                                </div>
                            </button>
                        </form>
                    </div>
                </div>

            </main>
        </div>

    </div>
    <%- include('../includes/end.ejs') %>