<%- include('../includes/head.ejs') %>
<link href="/css/style.css" rel="stylesheet" />
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <div class="container alignLayoutMain">
            <% if(products.length > 0 ){ %>
            <div class="row row-cols-1 row-cols-md-2">
                <% for(let product of products) { %>
                <div class="col mb-4">

                    <div class="card ">
                        <div class="card-header">
                            <h3><%=  product.name %></h3>
                        </div>
                        <img src="<%= product.imgUrl %> " class="card-img-top" alt="avatar" >
                        <div class="card-body text-center">
                            <h4 class="text-danger  ">$<%= product.price %> </h4 c>
                            <hr class="featurette-divider">
                            <p class="card-text"><%= product.description %> </p>
                        </div>
                        <div class="card-footer ">

                            <a class="btn btn-info " href="/detail/<%= product.id %>"  >
                                <h4>
                                    <i class="fas fa-info-circle"></i> Detail
                                </h4>
                            </a>

                            <form action="/cart" method="POST" class="float-right">
                                <input type="hidden" name="productId" value="<%= product.id %>">
                                <button class="btn btn-dark " type="submit">
                                    <h4>
                                        <i class="fas fa-cart-plus"></i> Add to Cart
                                    </h4>
                                </button>
                            </form>

                        </div>
                    </div>
                </div>
                <% } %>
            </div>
            <% } else {  %>
            <h1>No Data!</h1>
            <% } %>
        </div>
    </main>
    <%- include('../includes/end.ejs') %>